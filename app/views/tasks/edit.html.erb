<%= form_for(@task) do |field| %>
  <%= field.label :title %>
  <%= field.text_field :title %>
  <%= field.label :details %>
  <%= field.text_field :details %>
  <%= check_box_tag(:completed) %>
  <%= label_tag(:completed, "Completed") %>
  <%= field.submit %>
<% end %>

<%= link_to "Back to list", tasks_path %>
