<div>
  <h1><%= @task.title %></h1>
  <%= link_to "Edit this task",  edit_task_path(@task) %>
</div>
<div><%= @task.details %></div>
<span>
  <% if @task.completed %>
    <%= "This task is completed" %>
  <% else %>
    <%= "This task not completed yet" %>
  <% end %>
</span>

<%= link_to "Back to list", tasks_path %>
